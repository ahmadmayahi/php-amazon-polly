{
    "name": "ahmadmayahi/php-polly",
    "description": "This is my package php-polly",
    "keywords": [
        "php",
        "aws",
        "polly"
    ],
    "homepage": "https://github.com/ahmadmayahi/php-polly",
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmad Mayahi",
            "email": "ahmad.mayahi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "aws/aws-sdk-php": "^3.208"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "AhmadMayahi\\Polly\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AhmadMayahi\\Polly\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
